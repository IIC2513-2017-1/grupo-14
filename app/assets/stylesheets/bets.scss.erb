.bet_list {
	.bet_block {
		margin-top: 0px;
		margin-bottom: 20px;
	}
	.summary {
		padding: 5px;
		height: auto;
		color: #fffee5;
		background-color: #3f9619;
		border-radius: 10px;
		border-bottom-right-radius: 10px;
		border-bottom-left-radius: 10px;
		text-align: center;
		&:hover {
			background-color: #284f21;
			td {
				/*border-color: white;*/
			}
		}
		table, tr, td {
			border: none;
		}
		td {
			text-align: center;
			width: 6%;
			padding: 0;
			vertical-align: middle;
			border-left: 1px solid #fffee5;
			&.index_name {
				width: 12%;
				text-align: left;
				border: none
			}
			&.index_deadline {
				width: 10%;
			}
		}
	}
	.details {
		background-color: #f9f9f7;
		border-left: 1px solid grey;
		border-bottom: 1px solid grey;
		border-right: 1px solid grey;
		border-bottom-right-radius: 10px;
		border-bottom-left-radius: 10px;
		display: none;
	}
	.delete {
		margin-bottom: 2px;
	}
}

.toggle_details {
	padding: 0;
	border: 0;
	&:focus {
		outline: none;
	}
	&:hover {
		cursor: pointer;
	}
}

.bet_show {
	width: 90%;
	padding-left: 5%;
	padding-top: 5px;
	padding-bottom: 5px;
	p {
		margin: 10px;
	}
	ul {
		margin: 10px;
	}
}

#new_bet_page {
	text-align: center;

	.form_content {
		display: inline-block;
		label {
			text-align: left;
		}
		.field > input, textarea {
			text-align: left;
			width: 100%;
		}
	}
	.extra_choice {
		width: 100%;
	 input {
		display: inline-block;
		width: auto;	
	}
	}
}