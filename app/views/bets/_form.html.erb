<%= form_for(bet) do |f| %>
  <% if bet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bet.errors.count, "error") %> prohibited this bet from being saved:</h2>

      <ul>
      <% bet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, required: true %>
  </div>

  <div class="field">
    <%= f.label :deadline %>
    <%= f.date_select :deadline, required: true %>
  </div>

  <div class="field">
    <%= f.label :max_participants %>
    <%= f.number_field :max_participants, required: true %>
  </div>

  <div class="field">
    <%= f.label :kind %>
    <%= f.text_field :kind, required: true %>
  </div>

  <div class="field">
    <%= f.label :min_bet %>
    <%= f.number_field :min_bet, required: true %>
  </div>

  <div class="field">
    <%= f.label :max_bet %>
    <%= f.number_field :max_bet, required: true %>
  </div>

  <div class="values">
    <div class="field">
      <%= f.label "Choice" %>
      <input required="required" type="text" name="bet[choices][][value]">
    </div>
    <div class="field">
      <%= f.label "Choice" %>
      <input required="required" type="text" name="bet[choices][][value]">
    </div>
  </div>
  
    <button class="add_form_field">Add another choice &nbsp; <span style="font-size:16px; font-weight:bold;">+ </span></button>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script>
  $(document).ready(function() {
      var value_index
      var max_fields      = 50;
      var wrapper         = $(".values");
      var add_button      = $(".add_form_field");
    
      var x = 1;
      $(add_button).click(function(e){
          e.preventDefault();
          if(x < max_fields){
              x++;
              $(wrapper).append('<div class="field"><label>Choice</label><input required="required" type="text" name="bet[choices][][value]"><a href="#" class="delete">Delete</a></div>'); //add input box
          }
    else
    {
    alert("Can't add more choices")
    }
      });
    
      $(wrapper).on("click",".delete", function(e){
          e.preventDefault(); $(this).parent('div').remove(); x--;
      })
  });
</script>

