<%= form_for(bet) do |f| %>
  <% if bet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bet.errors.count, "error") %> prohibited this bet from being saved:</h2>

      <ul>
      <% bet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, required: true %>
  </div>

  <div class="field">
    <%= f.label :deadline %>
    <%= f.date_select :deadline, required: true %>
  </div>

  <div class="field">
    <%= f.label :max_participants %>
    <%= f.number_field :max_participants, required: true %>
  </div>

  <div class="field">
    <%= f.label :kind %>
    <%= f.text_field :kind %>
  </div>

  <div class="field">
    <%= f.label :min_bet %>
    <%= f.number_field :min_bet, required: true %>
  </div>

  <div class="field">
    <%= f.label :max_bet %>
    <%= f.number_field :max_bet, required: true %>
  </div>

  <div class="field">
    <%= f.label :user_id %>
    <%= f.select :user_id, User.all.collect { |user| [ user.name, user.id ] }, { include_blank: true }, { required: true } %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
