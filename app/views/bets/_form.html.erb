    <%= f.text_area :description, required: true %>
  </div>

  <div class="field">
    <%= f.label :deadline %>
    <%= f.date_select :deadline, required: true %>
  </div>

  <div class="field">
    <%= f.label :max_participants %>
    <%= f.number_field :max_participants, required: true %>
  </div>

  <div class="field">
    <%= f.label :kind %>
    <%= f.text_field :kind, required: true %>
  </div>

  <div class="field">
    <%= f.label :min_bet %>
    <%= f.number_field :min_bet, required: true %>
  </div>

  <div class="field">
    <%= f.label :max_bet %>
    <%= f.number_field :max_bet, required: true %>
  </div>

  <div class="field">
    <%= f.label :private %>
    <%= f.check_box :private %>
  </div>

  <div class="values">
    <div class="field">
      <%= f.label "Choice" %>
      <input required="required" type="text" name="bet[choices_attributes][][value]">
    </div>
    <div class="field">
      <%= f.label "Choice" %>
      <input required="required" type="text" name="bet[choices_attributes][][value]">
    </div>
  </div>
  
