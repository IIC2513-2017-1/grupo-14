<!DOCTYPE html>
<html>
  <head>
    <title>Apuestas</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<header>
      <div id="logo">
        <%= link_to root_path do %>
          <img src="https://i.imgur.com/TQ6XYac.png"/>
        <% end %>
      </div>

      <nav id="main-menu">
        <%= link_to 'Users', users_path %>
        <%= link_to 'Bets', bets_path %>
      </nav>

  		<div id="user-bar">
  			<% if current_user %>
          <div class="name">Welcome, <%= current_user.name %>
          </div>
				<%= link_to 'Logout', session_url, method: :delete%><br>
			<% else %>
        <%= render 'sessions/form', session: @session %>
        <%= link_to 'Sign up', new_user_url %>
			<% end %>
  		</div>

  	</header>
  	<main>
  		<% [:alert, :notice].each do |flash_type| %>
        	<% if (flash_message = flash[flash_type]).present? %>
          		<div class="<%= flash_type %>"><%= flash_message %></div>
        	<% end %>
      	<% end %>

    	<%= yield %>
    </main>
  </body>
</html>
