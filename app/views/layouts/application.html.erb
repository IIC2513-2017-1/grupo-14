<!DOCTYPE html>
<html>
  <head>
    <title>Apuestas</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<header>
      <div id="logo">
        <%= link_to root_path do %>
          <img src=<%= image_url('logo.png') %>/>
        <% end %>
      </div>

        <nav id="main-menu">
          <% if current_user %>
            <%= link_to 'Users', users_path %>
          <% end %>
          <%= link_to 'Bets', bets_path %>
        </nav>

      <div id="user-bar">
  			<% if current_user %>
          <div class="name">Welcome, <%= link_to current_user.name, current_user %>
          </div>
				<%= link_to 'Logout', session_url, method: :delete%><br>
  			<% else %>
          <table>
            <tbody>
              <td>
                <%= render 'sessions/form', session: @session %>
              </td>
              <td>
                <%= link_to 'Sign up', new_user_url %>
              </td>
            </tbody>
          </table>
  			<% end %>
  		</div>

  	</header>

  	<main>
  		<% [:alert, :notice].each do |flash_type| %>
      	<% if (flash_message = flash[flash_type]).present? %>
        		<div id="<%= flash_type %>"><%= flash_message %></div>
      	<% end %>
    	<% end %>

    	<%= yield %>
    </main>

    <footer>
      <hr>
      <div id='app_name'>Â© Ludopath 2017</div>
    </footer>
  </body>
</html>
