<%= form_for([@bet, @participation]) do |f| %>
  <% if participation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(participation.errors.count, "error") %> prohibited this participation from being saved:</h2>

      <ul>
      <% participation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Amount (min: ' + @bet.min_bet.to_s + ', max: ' + @bet.max_bet.to_s + ')' %>
    <%= f.number_field :amount, required: true %>
  </div>

  <div class="field">
    <%= f.label :choice_id %>
    <%= f.select :choice_id, @bet.choices.collect { |choice| [ choice.value, choice.id ] }, { include_blank: true }, { required: true } %>
  </div>

  <div class="actions">
    <%= f.submit "Place bet" %>
  </div>

<% end %>
