<div id="sign_form">

	<%= form_for(:session, url: session_url) do |f| %>
		<div class="field">
			<%= f.label 'Username' %>
			<%= f.text_field :name %>
		</div>

		<div class="field">
			<%= f.label :password %>
			<%= f.password_field :password %>
		</div>

		<div class="actions">
			<%= f.submit "Log in" %>
		</div>
	<% end %>

</div>
