<% if current_user %>
  <h1>Users</h1>
  <div class = "multiimage">
    <% if is_not_regular %>
      <% sorted = @users.sort_by {|user| [user.role, user.name]} %>
    <% else %>
      <% sorted = @users.sort_by {|user| user.name} %>
    <% end %>
    <% sorted.each do |user| %>
      <%= link_to user do %>
        <div class = "block">
          <img src=<%=profile_picture(user)%> class = "user-image">
          <h4><%= user.name %></h4>
          <% if is_not_regular %>
            <p><%= user.role %></p>
          <%end%>
        </div>
      <% end %>          
    <%end%>
<%end%>