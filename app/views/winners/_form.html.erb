<%= form_for([@bet, @winner]) do |f| %>
  <% if @winner.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@winner.errors.count, "error") %> prohibited this winner from being saved:</h2>

      <ul>
      <% @winner.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.collection_radio_buttons(:choice_id, @bet.choices, :id, :value, checked: @bet.choices.first.id) do |b| %>
      <div class="radio">
        <%= b.radio_button %>
        <%= b.label do %>
          <%= b.text %>
        <% end %>
        <img src=<%= image_url('check.png') %>></img>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit 'Select the winner' %>
  </div>

<% end %>
